<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"

    >

    <TextView
        android:id="@+id/code"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab_bold"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:textColor="#546e7a"
        android:textSize="11sp"
        android:text="Код"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/currency_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="155dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="#546e7a"
        android:text="Валюта"
        android:layout_marginEnd="10dp"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/course"
        app:layout_constraintStart_toEndOf="@+id/code"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#546e7a"
        android:padding="10dp"
        android:layout_marginEnd="15dp"

        android:text="Валюта"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/currency_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/changing"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changing"
        android:layout_width="85dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Изменение"
        android:padding="10dp"
        android:textColor="#546e7a"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/course"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>